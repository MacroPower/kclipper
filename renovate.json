{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/testdata/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).+/charts/charts\\.k$"
      ],
      "matchStrings": [
        ".*\\{(\\n.*?)*[^\\}]*",
        "(.*\\n)*\\s*chart\\s*=\\s*\"(?<depName>.+)\"(.*\\n)*\\s*repoURL\\s*=\\s*\"(?<registryUrl>.+)\"(.*\\n)*\\s*targetRevision\\s*=\\s*\"(?<currentValue>.+)\""
      ],
      "matchStringsStrategy": "recursive",
      "datasourceTemplate": "helm"
    }
  ]
}
