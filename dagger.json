{
  "name": "kclipper-dev",
  "engineVersion": "v0.20.0",
  "sdk": {
    "source": "go"
  },
  "toolchains": [
    {
      "name": "go",
      "source": "toolchains/go",
      "customizations": [
        {
          "argument": "source",
          "ignore": [
            "dist",
            ".worktrees",
            ".tmp",
            ".git",
            ".claude/**",
            "**/*.md",
            "LICENSE",
            ".github/**",
            "**/.changes/**",
            "CHANGELOG*",
            ".editorconfig",
            ".gitignore",
            ".golangci.yaml",
            ".goreleaser.yaml",
            ".lefthook.yaml",
            ".prettierignore",
            ".prettierrc*",
            ".trivyignore",
            ".commitlintrc*",
            "Taskfile.yaml",
            "docs/**",
            "hack/**",
            "modules/**",
            "resources/**",
            ".nixpkgs/**"
          ]
        },
        {
          "argument": "cgo",
          "default": "true"
        }
      ]
    },
    {
      "name": "kclipper",
      "source": "toolchains/kclipper",
      "customizations": [
        {
          "argument": "source",
          "ignore": [
            "dist",
            ".worktrees",
            ".tmp",
            ".git",
            ".claude/**",
            "**/*.md",
            "LICENSE",
            ".github/**",
            "**/.changes/**",
            "CHANGELOG*",
            ".editorconfig",
            ".gitignore",
            ".golangci.yaml",
            ".goreleaser.yaml",
            ".lefthook.yaml",
            ".prettierignore",
            ".prettierrc*",
            ".trivyignore",
            ".commitlintrc*",
            "Taskfile.yaml",
            "docs/**",
            "hack/**",
            "modules/**",
            "resources/**",
            ".nixpkgs/**"
          ]
        }
      ]
    },
    {
      "name": "commitlint",
      "source": "toolchains/commitlint"
    },
    {
      "name": "security",
      "source": "toolchains/security",
      "customizations": [
        {
          "function": ["scanSource"],
          "argument": "source",
          "ignore": [
            "dist",
            ".worktrees",
            ".tmp",
            ".git",
            ".claude/**",
            "**/*.md",
            "LICENSE",
            ".github/**",
            "**/.changes/**",
            "CHANGELOG*",
            ".editorconfig",
            ".gitignore",
            ".golangci.yaml",
            ".goreleaser.yaml",
            ".lefthook.yaml",
            ".prettierignore",
            ".prettierrc*",
            ".commitlintrc*",
            "Taskfile.yaml",
            "docs/**",
            "hack/**",
            "modules/**",
            "resources/**",
            ".nixpkgs/**"
          ]
        }
      ]
    }
  ],
  "include": [
    "go.mod",
    "go.sum"
  ],
  "source": ".dagger"
}
