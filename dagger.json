{
  "name": "kclipper-dev",
  "engineVersion": "v0.20.0",
  "sdk": {
    "source": "go"
  },
  "toolchains": [
    {
      "name": "go",
      "source": "toolchains/go",
      "customizations": [
        {
          "argument": "source",
          "ignore": [
            "**",
            "!**/*.go",
            "!**/go.mod",
            "!**/go.sum",
            "!**/dagger.json",
            "!**/testdata/**",
            "!.golangci.yaml",
            "!modules/**",
            "!resources/**"
          ]
        },
        {
          "argument": "cgo",
          "default": "true"
        }
      ]
    },
    {
      "name": "kclipper",
      "source": "toolchains/kclipper",
      "customizations": [
        {
          "argument": "source",
          "ignore": [
            "**",
            "!**/*.go",
            "!**/go.mod",
            "!**/go.sum",
            "!**/testdata/**",
            "!**/*.yaml",
            "!**/*.json",
            "!**/*.md",
            "!.prettierignore",
            "!.github/**",
            "!hack/**",
            "!.nixpkgs/**",
            "!modules/**",
            "!resources/**",
            "!LICENSE"
          ]
        }
      ]
    },
    {
      "name": "commitlint",
      "source": "toolchains/commitlint"
    },
    {
      "name": "security",
      "source": "toolchains/security",
      "customizations": [
        {
          "function": ["scanSource"],
          "argument": "source",
          "ignore": [
            "**",
            "!**/*.go",
            "!**/go.mod",
            "!**/go.sum",
            "!.trivyignore"
          ]
        }
      ]
    }
  ],
  "include": ["go.mod", "go.sum"],
  "source": ".dagger"
}
