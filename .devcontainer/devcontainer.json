{
  "name": "Dagger Development Container",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "..",
    "args": {
      "TZ": "${localEnv:TZ:America/New_York}",
      "CLAUDE_CODE_VERSION": "latest",
      "HOST_HOME": "${localEnv:HOME}",
    },
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "remoteUser": "developer",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/developer/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/developer/.claude.json,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/git,target=/home/developer/.config/git,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/ccstatusline,target=/home/developer/.config/ccstatusline,type=bind,consistency=cached",
    "source=bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=gomodcache-${devcontainerId},target=/home/developer/go/pkg/mod,type=volume",
    "source=gobuildcache-${devcontainerId},target=/home/developer/.cache/go-build,type=volume",
  ],
  "containerEnv": {
    "TERM": "xterm-256color",
  },
  "remoteEnv": {
    "COLORTERM": "${localEnv:COLORTERM}",
    "TERM_PROGRAM": "${localEnv:TERM_PROGRAM}",
    "TERM_PROGRAM_VERSION": "${localEnv:TERM_PROGRAM_VERSION}",
  },
}
